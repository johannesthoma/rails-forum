<%= render :partial => "login/index" %>
<% if controller.user %>
	<%= link_to "Ask a question", :action => "ask_question" %><br/>
<% end %>
<% for p in @questions %>
	<%= link_to h("#{p.title}"), { :action => "show_question", :id => p.id } %> by <%= if p.user then p.user.login_name else "Nobody" end %><br/>
<% end %>
